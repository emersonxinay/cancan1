<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.reverse.each do |user| %>

      <tr>
        <td> <%= user.name %></td>
        <td> <%= user.role %> </td>

        <% if current_user.admin? %>
        <td> <%= link_to 'Cambiar Rol', update_role_path(user), method: :patch, class: 'btn btn-primary' %>
        <%= link_to 'Eliminar User', destroy_user_path(user), method: :delete, class: 'btn btn-danger',data: { confirm: 'EstÃ¡s seguro que deseas eliminar al usuario?' } %> </td>
        <% else %>
        <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
